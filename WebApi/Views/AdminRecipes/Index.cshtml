@model IEnumerable<WebApi.Models.Recipe>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Список рецептов</h1>

<p>
    <a input type="button" class="btn btn-primary" asp-area = "Identity" asp-page="/RecipeModify/Create">Создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MainPicture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colories)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr onclick="location.href = '@(Url.Page("/RecipeModify/Edit", new { id = item.Id, area = "Identity" }))'" class="main-table">
            <td>
                <img src="@Url.Action("Image", "Recipes", new { id = item.Id })" alt="Recipe image" height="150" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight) гр.
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colories) ккал.
            </td>
        </tr>
}
    </tbody>
</table>
